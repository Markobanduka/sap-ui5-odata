<mvc:View controllerName="restwithui5.controller.Initial"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Table id="userTable" items="{/users}">
        <headerToolbar>
            <Toolbar>
                <Title text="Users" />
                <ToolbarSpacer/>
                <Button icon="sap-icon://add" press="createNew"></Button>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
               <Text text="Name" />
            </Column>
            <Column>
                 <Text text="Email" />
            </Column>
            <Column>
                <Text text="Gender" />
            </Column>
            <Column>
                <Text text="Status" />
            </Column>
        </columns>
        <ColumnListItem type="Navigation" press="navigateToDetails" highlight="{= ${isSaved}? 'Success' : 'Error'}">
            <cells>
                <Text text="{name}" />
                <Text text="{email}" />
                <Text text="{gender}" />
                <Text text="{status}" />
            </cells>
        </ColumnListItem>
    </Table>
</mvc:View>